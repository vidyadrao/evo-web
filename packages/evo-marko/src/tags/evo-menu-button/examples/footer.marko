<let/selected=[]>
<evo-menu-button
    variant="filter"
    selected:=selected
    ...input>
    Filter Items
    <if=(selected.length > 0)>
        (+${selected.length})
    </if>
    <@item value="item 1">
        item 1
    </@item>
    <@item value="item 2">
        item 2
    </@item>
    <@item value="item 3">
        item 3
    </@item>
    <@footerButton priority="tertiary">
            Apply
    </@footerButton>
</evo-menu-button>
